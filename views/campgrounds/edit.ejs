<%- include("../partials/header") %>

<h1 class="text-center m-4">Edit <%= campground.name %></h1>
<div style="width: 30%; margin: auto;">
  <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
    <div class="form-group"><input type="text" name="campground[name]" placeholder="name" class="form-control"
        value="<%= campground.name %>" /></div>
    <div class="form-group"><input type="number" name="campground[price]" placeholder="price" min="0.00" step="0.01"
        class="form-control" value="<%= campground.price %>" />
    </div>
    <div class="form-group"><input type="text" name="campground[image]" placeholder="image url" class="form-control"
        value="<%= campground.image %>" /></div>
    <div class="form-group"><input type="text" name="campground[description]" placeholder="description"
        class="form-control" value="<%= campground.description %>" />
    </div>

    <div class="form-group"><button class="btn btn-lg btn-primary btn-block">Submit!</button></div>

  </form>
  <a href="/campgrounds/<%= campground.id %>" class="btn btn-success mb-2 btn-block btn-lg">Go Back</a>
</div>

<%- include("../partials/footer") %>